<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="2dp">

        <ImageView
            android:id="@+id/iv_command_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_command_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_command_icon1"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_command_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_command_icon2"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_command_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_command_icon3"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_command_icon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_command_icon4"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_command_icon6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_command_icon5"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_command_icon7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_command_icon6"/>

        <TextView
            android:id="@+id/tv_command_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/iv_command_icon7"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item"
        android:src="@android:color/darker_gray"/>

</RelativeLayout>